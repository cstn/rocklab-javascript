{
  "name": "rocklab-javascript",
  "version": "3.2.68",
  "description": "Rocklab Style Guide for JavaScript based projects",
  "private": true,
  "keywords": [
    "rocklab",
    "javacript",
    "styleguide",
    "lint"
  ],
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "postinstall": "npm run bootstrap",
    "lerna": "lerna",
    "test": "lerna run test",
    "bootstrap": "lerna bootstrap",
    "version": "lerna version --conventional-commits",
    "publish": "lerna publish",
    "release": "lerna version --conventional-commits --create-release github",
    "update": "lerna exec ncu",
    "lint:js": "eslint packages/",
    "lint:styles": "stylelint packages/**/*.css",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:styles -- --fix",
    "prettier": "prettier-eslint --write \"packages/**/*.js}\"",
    "commit": "commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cstn/rocklab-javascript"
  },
  "author": "Carsten Stein (carsten.stein@cast-it.de)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-lerna-scopes": "17.6.6",
    "@commitlint/prompt-cli": "17.6.6",
    "eslint": "8.44.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "lerna": "6.6.2",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-eslint-cli": "7.1.0",
    "stylelint": "15.9.0"
  }
}
