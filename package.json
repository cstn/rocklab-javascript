{
  "name": "rocklab-javascript",
  "version": "2.0.0",
  "description": "Rocklab Style Guide for JavaScript based projects",
  "private": true,
  "keywords": [
    "rocklab",
    "javacript",
    "styleguide",
    "lint"
  ],
  "engines": {
    "node": ">= 14",
    "npm": ">= 6"
  },
  "scripts": {
    "postinstall": "npm run lerna:bootstrap",
    "test": "echo \"No test specified\"",
    "lerna": "lerna",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:version": "lerna version",
    "lerna:publish": "lerna publish",
    "lint:js": "eslint packages/",
    "lint:styles": "stylelint packages/**/*.css",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:styles -- --fix",
    "prettier": "prettier-eslint --write \"packages/**/*.js}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cstn/rocklab-javascript"
  },
  "author": "Carsten Stein (carsten.stein@cast-it.de)",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "prettier-eslint-cli": "^5.0.1",
    "stylelint": "^14.0.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
