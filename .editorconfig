# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100

[Makefile]
indent_style = tab
tab_width = 4

[*.scss]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
